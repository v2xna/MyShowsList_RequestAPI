<div class="text-center">
	<h2 class="fw-bold">Sign in to your account</h2>
</div>

<div class="form-center">
	
	<form method="post">
		<div class="form-group">
			<label asp-for="@Model.Login.username">Username</label>
			<input asp-for="@Model.Login.username" class="form-control" />
			<span asp-validation-for="@Model.Login.username" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Login.password">Password</label>
			<input type="password" asp-for="@Model.Login.password" class="form-control" />
			<span asp-validation-for="@Model.Login.password" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary w-100 mt-4">Login</button>
		<a asp-page="/SignUp" class="btn btn-outline-light w-100 mt-3">Sign Up</a>
	</form>
</div>


